<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_grid_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/item_bg"
        android:padding="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_grid_theme"
        android:layout_width="64dp"
        android:layout_height="24dp"
        android:background="@drawable/item_tag_bg"
        android:padding="3dp"
        android:text="귀염뽀짝"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_grid_img"
        app:layout_constraintEnd_toEndOf="@+id/item_grid_img"
        app:layout_constraintStart_toStartOf="@+id/item_grid_img"
        app:layout_constraintTop_toBottomOf="@+id/item_grid_img" />

</android.support.constraint.ConstraintLayout>