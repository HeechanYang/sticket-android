<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.sticket.app.sticket.database.entity.Asset" />

        <variable
            name="adapter"
            type="com.sticket.app.sticket.adapter.SticonEditorGridAdapter" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_sticker_image"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/item_sticker_status"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/transparent"
            android:src="@drawable/img_download3"
            app:layout_constraintBottom_toBottomOf="@+id/item_sticker_image"
            app:layout_constraintEnd_toEndOf="@+id/item_sticker_image"
            app:layout_constraintStart_toEndOf="@+id/item_sticker_image"
            app:layout_constraintTop_toBottomOf="@+id/item_sticker_image" />

    </android.support.constraint.ConstraintLayout>
</layout>